<p id="notice"><%= notice %></p>

<h1>Loans</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Good</th>
      <th>Borrowed at</th>
      <th>Due at</th>
      <th>Owner notes</th>
      <th>Borrower notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.user_id %></td>
        <td><%= loan.good_id %></td>
        <td><%= loan.borrowed_at %></td>
        <td><%= loan.due_at %></td>
        <td><%= loan.owner_notes %></td>
        <td><%= loan.borrower_notes %></td>
        <td><%= link_to 'Show', loan %></td>
        <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
        <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

